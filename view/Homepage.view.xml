<mvc:View controllerName="projects.controller.Homepage"
          xmlns:mvc="sap.ui.core.mvc"
          xmlns="sap.m"
          xmlns:core="sap.ui.core"
          xmlns:l="sap.ui.layout">
    <Page id="page"
          title="{i18n>title}"
          showHeader="false"
          class="myBackgroundImage">
        <content>
            <VBox>
                <OverflowToolbar class="headerColor headerSize"
                                 height="60px">
                    <core:Icon src="sap-icon://sap-ui5"
                               size="30px" />
                    <Title text="{i18n>title}"
                           level="H1"
                           class="headerTextColor headerTextSize" />
                    <ToolbarSpacer />
                </OverflowToolbar>
            </VBox>
            <l:Grid>
                <FlexBox>
                    <layoutData>
                        <l:GridData span="XL3 L3 M2 S1" />
                    </layoutData>
                </FlexBox>
                <Panel class="sapUiLargeMarginTop">
                    <VBox>
                        <Title text="{i18n>homepage.aboutme.title}" />
                    </VBox>
                    <layoutData>
                        <l:GridData span="XL6 L6 M8 S10" />
                    </layoutData>
                </Panel>
                <FlexBox>
                    <layoutData>
                        <l:GridData span="XL4 L3 M2 S1" />
                    </layoutData>
                </FlexBox>
            </l:Grid>
            <VBox class="sapUiLargeMarginTop"
                  alignContent="Center"
                  visible="{= !${device>/system/phone} }">
                <HBox justifyContent="SpaceBetween"
                      class="myCenterMargins">
                    <Button text="Go to Test Page1"
                            width="150px"
                            press="onNav"/>
                    <Button text="Go to PDP Project"
                            width="150px"
                            press="onNavPDP" />
                    <Button text="Teste"
                            width="150px" />
                </HBox>
            </VBox>
            <VBox class="sapUiLargeMarginTop"
                  alignContent="Center"
                  visible="{device>/system/phone}">
                <Button text="Go to Test Page1"
                        width="150px"
                        press="onNav" />
                <Button text="Go to PDP Project"
                        width="150px"
                        press="onNavPDP" />
                <Button text="Teste"
                        width="150px" />
            </VBox>

            <VBox class="myTestVbox" width="100px"  alignItems="Center" justifyContent="Center">
                <Text text="teste" class="myBlackText sapUiTinyMarginTop"></Text>
                <Text text="teste" class="myBlackText sapUiTinyMarginBottom"></Text>
            </VBox>
            <VBox class="myCenteredVBox">
                <Button icon="sap-icon://accept" text="Bot達o 1" type="Transparent"/>
                <Button icon="sap-icon://cancel" text="Bot達o 2 com tamanho diferente" type="Transparent"/>
                <Button icon="sap-icon://edit" text="Bot達o 3 testee" type="Transparent"/>
                <Button icon="sap-icon://add" text="Bot達o 4 testeeeeeeee" type="Transparent"/>
            </VBox>
        </content>
    </Page>
</mvc:View>