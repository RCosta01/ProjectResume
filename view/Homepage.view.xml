            <core:Fragment fragmentName="projects.fragment.components.pageHeader"
                           type="XML" />
        </customHeader>
        <content>
            <VBox class="section" id="aboutMeSection">
                <core:Fragment fragmentName="projects.fragment.components.aboutMe"
                           type="XML" />
            </VBox>
            <VBox class="section" id="professionalHistorySection">
                <core:Fragment fragmentName="projects.fragment.components.professionalHistory"
                           type="XML" />
            </VBox>
            <VBox class="section" id="demosSection">
                <core:Fragment fragmentName="projects.fragment.components.demos"
                           type="XML" />
            </VBox>
            <VBox class="section" id="projectsSection">
                <core:Fragment fragmentName="projects.fragment.components.projects"
                           type="XML" />
            </VBox>
