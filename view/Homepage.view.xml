<mvc:View controllerName="projects.controller.Homepage"
          xmlns:mvc="sap.ui.core.mvc"
          xmlns="sap.m"
          xmlns:core="sap.ui.core"
          xmlns:l="sap.ui.layout"
          xmlns:custom="projects.controller">
    <Page id="page"
          title="{i18n>title}"
          showHeader="false"
          class="myBackgroundImage">
        <content>
            <VBox>
                <OverflowToolbar class="headerColor headerSize"
                                 height="60px">
                    <core:Icon src="sap-icon://sap-ui5"
                               size="30px" />
                    <Title text="{i18n>title}"
                           level="H1"
                           class="headerTextColor headerTextSize" />
                    <ToolbarSpacer />
                </OverflowToolbar>
            </VBox>
            <l:Grid>
                <FlexBox>
                    <layoutData>
                        <l:GridData span="XL3 L3 M2 S1" />
                    </layoutData>
                </FlexBox>
                <Panel class="sapUiLargeMarginTop">
                    <VBox>
                        <Title text="{i18n>homepage.aboutme.title} - WIP" />
                    </VBox>
                    <layoutData>
                        <l:GridData span="XL6 L6 M8 S10" />
                    </layoutData>
                </Panel>
                <FlexBox>
                    <layoutData>
                        <l:GridData span="XL4 L3 M2 S1" />
                    </layoutData>
                </FlexBox>
            </l:Grid>
            <!--<VBox class="sapUiLargeMarginTop"
                  alignContent="Center"
                  visible="{= !${device>/system/phone} }"
                  height="170px">
                <HBox justifyContent="Center"
                      class="myCenterMargins">
                    <Button text="PDP"
                            width="360px"
                            press="onNavPDP"
                            class="myPDPButton myProjectsButton" />
                </HBox>
            </VBox>
            <VBox class="sapUiLargeMarginTop"
                  alignContent="Center"
                  visible="{device>/system/phone}"
                  alignItems="Center"
                  height="170px">
                <Button text="PDP"
                        width="320px"
                        press="onNavPDP"
                        class="myPDPButton myProjectsButton" />
            </VBox>  -->
            <VBox class="sapUiLargeMarginTop">
                <custom:Timeline items="{
                        path: 'Timeline>/',
                        sorter: { path: 'startDate', descending: true }
                    }" >
                    <custom:TimelineItem
                        title="{Timeline>date}"
                        subtitle="{Timeline>title}"
                        description="{Timeline>description}"
                        date="{Timeline>startDate}"
                        demo="{Timeline>demo}"
                        linkPress="onLinkpress"
                    />
                </custom:Timeline>
            </VBox>
        </content>
    </Page>
</mvc:View>