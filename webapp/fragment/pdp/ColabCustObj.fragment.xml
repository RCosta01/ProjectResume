<core:FragmentDefinition displayBlock="true" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" height="100%" xmlns="sap.m">
    <Dialog busyIndicatorDelay="0" title="{i18n>pdp.addCustButtonText}" contentWidth="500px">
        <Panel class="confirmOverallPanel sapUiSmallMarginTop">
            <l:Grid defaultSpan="XL12 L12 M12 S12" class="createObj">
                <Title level="H1" text="{i18n>pdp.objCreationIni}"/>
                <Input id="pdp-idCustObjName" width="100%" value="" placeholder="{i18n>pdp.objCreationIni}" class="sapUiTinyMarginTop sapUiSmallMarginBottom"/>
                <Title level="H2" text="{i18n>pdp.objCreationDesc}" class="sapUiSmallMarginTop" />
                <TextArea id="pdp-idCustObjDesc" width="100%" value="" placeholder="{i18n>pdp.objCreationDescPh}" class="sapUiTinyMarginTop sapUiSmallMarginBottom" />
            </l:Grid>
            <l:Grid defaultSpan="XL6 L6 M6 S6" class="createObj">
                <Title level="H2" text="{i18n>pdp.objCreationIniType}" class="sapUiSmallMarginTop"/>
                <Title level="H2" text="{i18n>pdp.objCreationRealDate}" class="sapUiSmallMarginTop"/>
                <Select id="pdp-initTypSelCust" items="{initiativeList>/}" class="sapUiTinyMarginTop sapUiSmallMarginBottom">
                    <core:Item key="{initiativeList>externalCode}" text="{initiativeList>description}" />
                </Select>
                <DatePicker id="pdp-idDatePickerColabCust" displayFormat="dd-MM-yyyy" class="sapUiTinyMarginTop sapUiSmallMarginBottom"/>
            </l:Grid>
            <l:Grid defaultSpan="XL12 L12 M12 S12" class="createObj">
                <Title level="H2" text="{i18n>pdp.objCreationObs}" class="sapUiSmallMarginTop"/>
                <TextArea rows="3" id="pdp-idObsCustColab" width="100%" value="" placeholder="{i18n>pdp.objCreationObs}" class="sapUiTinyMarginTop"/>
            </l:Grid>
        </Panel>
        <buttons>
            <Button text="{i18n>pdp.exitButtonText}" press="onExitCustObj" type="Reject" />
            <Button text="{i18n>pdp.createButtonText}" press="onCreateCustObj" type="Accept" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>